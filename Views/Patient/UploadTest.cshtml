@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.BodyClass = "patient-bg";
}

<style>
    .upload-container {
        max-width: 600px;
        margin: 80px auto;
        background: #ffffffdd;
        padding: 35px;
        border-radius: 18px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15);
        text-align: center;
        font-family: Poppins, sans-serif;
    }

    .upload-title {
        font-size: 32px;
        font-weight: 700;
        color: #0f837d;
        margin-bottom: 25px;
    }

    .file-input-box {
        background: #f7fefe;
        padding: 22px;
        border: 2px dashed #0f837d88;
        border-radius: 14px;
        cursor: pointer;
        transition: 0.25s ease;
        margin-bottom: 22px;
    }

    .file-input-box:hover {
        background: #e9fdfd;
        border-color: #0f837d;
    }

    .file-input-box i {
        font-size: 40px;
        color: #0f837d;
        margin-bottom: 8px;
    }

    #fileName {
        font-size: 16px;
        margin-top: 10px;
        color: #555;
    }

    .upload-btn {
        background: #0f837d;
        color: white;
        padding: 12px 26px;
        border-radius: 10px;
        border: none;
        font-size: 18px;
        cursor: pointer;
        transition: 0.2s ease;
        width: 100%;
    }

    .upload-btn:hover {
        background: #0c6a63;
        transform: translateY(-2px);
    }

    .back-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 45px;
        height: 45px;
        background-color: #0f837d;
        color: white;
        text-decoration: none;
        border-radius: 50%;
        font-size: 20px;
        transition: 0.2s ease;
        position: fixed;
        left: 30px;
        top: 50%;
        transform: translateY(-50%);
    }

    .back-btn:hover {
        background-color: #0c6963;
        transform: translateY(-50%) scale(1.1);
        color: white;
    }
</style>

<a href="/Patient/Tests" class="back-btn">
    <i class="fa-solid fa-arrow-left"></i>
</a>

<div class="upload-container">

    <div class="upload-title">Tahlil Yükle (PDF)</div>

    <form method="post" enctype="multipart/form-data" action="/Patient/UploadTest">

        <label for="pdfFile" class="file-input-box">
            <i class="fa-solid fa-file-arrow-up"></i><br>
            <span>PDF dosyanızı seçmek için tıklayın</span>
            <div id="fileName">Dosya seçilmedi</div>
        </label>

        <input type="file" id="pdfFile" name="pdfFile" accept="application/pdf" style="display:none" />

        <button type="submit" class="upload-btn">PDF Yükle</button>
    </form>

</div>

<script>
    document.getElementById("pdfFile").addEventListener("change", function () {
        const fileBox = document.getElementById("fileName");
        fileBox.innerText = this.files.length > 0 ? this.files[0].name : "Dosya seçilmedi";
    });
</script>
