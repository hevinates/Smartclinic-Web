@model smartclinic_web.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.BodyClass = "patient-bg";
}
@if (TempData["Success"] != null)
{
    <div class="success-message">@TempData["Success"]</div>
}
<style>
    .profile-card {
        max-width: 550px;
        margin: 40px auto;
        background: white;
        padding: 35px;
        border-radius: 18px;
        box-shadow: 0px 8px 25px rgba(0,0,0,0.15);
    }
    .title {
        font-size: 30px;
        color: #0f837d;
        font-weight: 700;
        text-align: center;
        margin-bottom: 25px;
    }
    .input-box {
        width: 100%;
        padding: 12px;
        margin-top: 12px;
        border: 1px solid #ccc;
        border-radius: 10px;
        font-size: 16px;
    }
    .save-btn {
        width: 100%;
        margin-top: 25px;
        background: #0f837d;
        color: white;
        padding: 12px;
        border: none;
        border-radius: 10px;
        font-size: 18px;
        cursor: pointer;
    }
    .save-btn:hover {
        background: #0c6a63;
    }
    .success-message {
        background-color: #e8f9f1;
        color: #0f837d;
        padding: 12px;
        border-radius: 10px;
        margin-bottom: 15px;
        font-weight: 600;
        text-align: center;
        border: 1px solid #0f837d;
    }
</style>

<div class="profile-card">

    <div class="title">Profilim</div>

    @if (ViewBag.Success != null)
    {
        <div class="success-message">@ViewBag.Success</div>
    }

    <form method="post" action="/Patient/UpdateProfile">


        <input type="hidden" name="Id" value="@Model.Id" />

        <input type="text" name="Name" class="input-box" placeholder="İsim" value="@Model.Name" required />
        <input type="text" name="Surname" class="input-box" placeholder="Soyisim" value="@Model.Surname" required />
        <input type="number" name="Age" class="input-box" placeholder="Yaş" value="@Model.Age" />


        <!-- ⭐ Cinsiyet -->
        <select name="Gender" class="input-box">
            <option value="">Cinsiyet</option>

            <option value="Kadın" selected="@(Model.Gender == "Kadın" ? "selected" : null)">Kadın</option>
            <option value="Erkek" selected="@(Model.Gender == "Erkek" ? "selected" : null)">Erkek</option>
            <option value="Belirtmek istemiyorum" selected="@(Model.Gender == "Belirtmek istemiyorum" ? "selected" : null)">
                Belirtmek İstemiyorum
            </option>
        </select>


                <!-- ⭐ Kan Grubu Dropdown -->
        <select name="BloodGroup" class="input-box">
            <option value="">Kan Grubu</option>

            <option value="A+" selected="@(Model.BloodGroup == "A+" ? "selected" : null)">A+</option>
            <option value="A-" selected="@(Model.BloodGroup == "A-" ? "selected" : null)">A-</option>

            <option value="B+" selected="@(Model.BloodGroup == "B+" ? "selected" : null)">B+</option>
            <option value="B-" selected="@(Model.BloodGroup == "B-" ? "selected" : null)">B-</option>

            <option value="AB+" selected="@(Model.BloodGroup == "AB+" ? "selected" : null)">AB+</option>
            <option value="AB-" selected="@(Model.BloodGroup == "AB-" ? "selected" : null)">AB-</option>

            <option value="0+" selected="@(Model.BloodGroup == "0+" ? "selected" : null)">0+</option>
            <option value="0-" selected="@(Model.BloodGroup == "0-" ? "selected" : null)">0-</option>
        </select>


        <!-- ⭐ Doktor Seçimi -->
        <select id="doctorSelect" name="DoctorName" class="input-box">
            <option value="">Doktor Seçin</option>

            @foreach (var doc in ViewBag.Doctors)
            {
                <option value="@doc.FullName"
                        data-hospital="@doc.DoctorHospital"
                        selected="@(Model.DoctorName == doc.FullName ? "selected" : null)">
                    @doc.FullName
                </option>
            }
        </select>

        <!-- ⭐ Hastane Otomatik Dolsun -->
        <input type="text"
               id="doctorHospital"
               name="DoctorHospital"
               class="input-box"
               placeholder="Doktorun Hastanesi"
               value="@Model.DoctorHospital" />


        <button class="save-btn" type="submit">Kaydet</button>
    </form>

</div>


<!-- ⭐ Otomatik Hastane Doldurma -->
<script>
    const doctorSelect = document.getElementById("doctorSelect");
    const hospitalInput = document.getElementById("doctorHospital");

    doctorSelect.addEventListener("change", function () {
        const selected = doctorSelect.options[doctorSelect.selectedIndex];
        const hospital = selected.getAttribute("data-hospital");
        hospitalInput.value = hospital || "";
    });
</script>
