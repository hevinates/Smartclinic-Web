@{
    int userId = Context.Session.GetInt32("UserId") ?? 0;
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.BodyClass = "patient-bg";
}

<style>

    /* HASTA PANELİ ARKA PLANI (body değil!) */
    .patient-bg {
        background-image: url('/images/patient_bg.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .page-header {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 40px;
        text-align: center;
        margin-bottom: 40px;
        box-shadow: 0px 4px 20px rgba(0,0,0,0.08);
    }

    .title {
        color: #0f837d;
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 0;
        text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.5);
    }

    .menu-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        max-width: 1100px;
        margin: 0 auto;
        justify-content: center;
    }

    .menu-item {
        background: white;
        width: 220px;
        height: 220px;
        border-radius: 20px;
        box-shadow: 0px 8px 25px rgba(0,0,0,0.10);

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;

        text-align: center;
        font-size: 20px;
        font-weight: 600;
        color: #0f837d;

        text-decoration: none;
        transition: 0.2s ease;
        position: relative;
    }

    .menu-item i {
        font-size: 50px;
        margin-bottom: 15px;
        color: #0f837d;
    }

    .menu-item:hover {
        background-color: #0f837d;
        color: white;
        transform: translateY(-5px);
        box-shadow: 0px 12px 30px rgba(0,0,0,0.20);
    }

    .menu-item:hover i {
        color: white;
    }

    /* Bildirim badge */
    .notification-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background-color: #dc3545;
        color: white;
        border-radius: 50%;
        width: 28px;
        height: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        font-weight: bold;
        box-shadow: 0 2px 8px rgba(220, 53, 69, 0.4);
    }

    .menu-item:hover .notification-badge {
        background-color: white;
        color: #0f837d;
    }

</style>


<div class="container">
    <div class="page-header">
        <div class="title">Hasta Paneli</div>
    </div>

    <div class="menu-grid">

        <a class="menu-item" href="/Patient/Profile?id=@userId">
            <i class="fa-solid fa-user"></i>
            Profilim
        </a>

        <a class="menu-item" href="/Patient/Tests">
            <i class="fa-solid fa-vial"></i>
            Tahlillerim
        </a>

        <a class="menu-item" href="/Patient/Reports">
            <i class="fa-solid fa-chart-line"></i>
            Raporlama
        </a>

        <a class="menu-item" href="/Patient/Chatbot">
            <i class="fa-solid fa-robot"></i>
            Asistan
        </a>

        <a class="menu-item" href="/Patient/Suggestions">
            <i class="fa-solid fa-lightbulb"></i>
            Öneriler
        </a>

        <a class="menu-item" href="/Patient/BookAppointment">
            <i class="fa-solid fa-calendar-check"></i>
            Randevu Al
        </a>

        <a class="menu-item" href="/Patient/Messages" id="messagesCard">
            <i class="fa-solid fa-comments"></i>
            Mesajlar
            <span class="notification-badge" id="messageNotification" style="display: none;"></span>
        </a>

    </div>

</div>

<script>
    // Okunmamış mesaj sayısını kontrol et
    function checkUnreadMessages() {
        fetch('/Patient/GetUnreadMessageCount')
            .then(response => response.json())
            .then(data => {
                const badge = document.getElementById('messageNotification');
                if (data.count > 0) {
                    badge.textContent = data.count > 99 ? '99+' : data.count;
                    badge.style.display = 'flex';
                } else {
                    badge.style.display = 'none';
                }
            })
            .catch(error => console.error('Error:', error));
    }

    // Sayfa yüklendiğinde kontrol et
    checkUnreadMessages();

    // Her 10 saniyede bir kontrol et
    setInterval(checkUnreadMessages, 10000);
</script>
