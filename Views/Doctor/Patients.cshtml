@model List<smartclinic_web.Models.User>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.BodyClass = "doctor-bg";
    var patientAppointments = ViewBag.PatientAppointments as Dictionary<int, smartclinic_web.Models.Appointment?>;
}

<style>
    .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .page-header {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 40px;
        text-align: center;
        margin-bottom: 40px;
        position: relative;
        box-shadow: 0px 4px 20px rgba(0,0,0,0.08);
    }

    .back-button {
        position: absolute;
        left: 30px;
        top: 50%;
        transform: translateY(-50%);
        background: white;
        border: none;
        width: 45px;
        height: 45px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0px 2px 10px rgba(0,0,0,0.1);
        text-decoration: none;
        color: #0f837d;
        font-size: 20px;
    }

    .back-button:hover {
        background: #0f837d;
        color: white;
        transform: translateY(-50%) scale(1.1);
        box-shadow: 0px 4px 15px rgba(15, 131, 125, 0.3);
    }

    .page-title {
        color: #0f837d;
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 0;
        text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.5);
    }

    .back-btn {
        display: none;
    }

    .patients-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 25px;
        margin-top: 30px;
    }

    .patient-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        border-left: 5px solid #0f837d;
    }

    .patient-card:hover {
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        transform: translateY(-3px);
    }

    .patient-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 2px solid #f0f0f0;
    }

    .patient-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #0f837d, #0a5955);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 24px;
        font-weight: 600;
        flex-shrink: 0;
    }

    .patient-name {
        flex: 1;
    }

    .patient-name h3 {
        margin: 0;
        font-size: 20px;
        font-weight: 700;
        color: #0f837d;
    }

    .patient-name p {
        margin: 5px 0 0 0;
        font-size: 14px;
        color: #666;
    }

    .patient-info {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
        margin-bottom: 20px;
    }

    .info-item {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
    }

    .info-item i {
        color: #0f837d;
        width: 20px;
    }

    .info-item strong {
        color: #333;
    }

    .appointment-section {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 15px;
        margin-top: 15px;
    }

    .appointment-section h4 {
        margin: 0 0 10px 0;
        font-size: 16px;
        color: #0f837d;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .appointment-info {
        font-size: 14px;
        color: #555;
    }

    .appointment-date {
        display: flex;
        align-items: center;
        gap: 8px;
        margin: 8px 0;
        font-weight: 600;
    }

    .appointment-time {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #666;
    }

    .appointment-status {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        margin-top: 8px;
    }

    .status-pending {
        background: #fff3cd;
        color: #856404;
    }

    .status-approved {
        background: #d4edda;
        color: #155724;
    }

    .no-appointment {
        text-align: center;
        color: #999;
        font-size: 14px;
        padding: 20px;
    }

    .patient-actions {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }

    .btn-action {
        flex: 1;
        padding: 10px;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
    }

    .btn-message {
        background: #0f837d;
        color: white;
    }

    .btn-message:hover {
        background: #0a5955;
        color: white;
    }

    .btn-tests {
        background: #6c5ce7;
        color: white;
    }

    .btn-tests:hover {
        background: #5f4dd1;
        color: white;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
    }
</style>

<div class="container">
    <div class="page-header">
        <a href="/Doctor/Dashboard" class="back-button">
            <i class="fa-solid fa-arrow-left"></i>
        </a>
        <h2 class="page-title">Hastalarım</h2>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="empty-state">
            <i class="fa-solid fa-user-group"></i>
            <h3>Henüz Hasta Yok</h3>
            <p>Sizi doktor olarak seçen hasta bulunmamaktadır.</p>
        </div>
    }
    else
    {
        <div class="patients-grid">
            @foreach (var patient in Model)
            {
                var appointment = patientAppointments?[patient.Id];
                var initials = $"{patient.Name?.FirstOrDefault()}{patient.Surname?.FirstOrDefault()}";

                <div class="patient-card">
                    <div class="patient-header">
                        <div class="patient-avatar">
                            @initials
                        </div>
                        <div class="patient-name">
                            <h3>@patient.Name @patient.Surname</h3>
                            <p><i class="fa-solid fa-envelope"></i> @patient.Email</p>
                        </div>
                    </div>

                    <div class="patient-info">
                        <div class="info-item">
                            <i class="fa-solid fa-cake-candles"></i>
                            <span><strong>Yaş:</strong> @(patient.Age?.ToString() ?? "Belirtilmemiş")</span>
                        </div>
                        <div class="info-item">
                            <i class="fa-solid fa-venus-mars"></i>
                            <span><strong>Cinsiyet:</strong> @(patient.Gender ?? "Belirtilmemiş")</span>
                        </div>
                        <div class="info-item">
                            <i class="fa-solid fa-droplet"></i>
                            <span><strong>Kan Grubu:</strong> @(patient.BloodGroup ?? "Belirtilmemiş")</span>
                        </div>
                        <div class="info-item">
                            <i class="fa-solid fa-hospital"></i>
                            <span><strong>Hastane:</strong> @(patient.DoctorHospital ?? "Belirtilmemiş")</span>
                        </div>
                    </div>

                    <div class="appointment-section">
                        @if (appointment != null)
                        {
                            <h4><i class="fa-solid fa-calendar-check"></i> Yaklaşan Randevu</h4>
                            <div class="appointment-info">
                                <div class="appointment-date">
                                    <i class="fa-solid fa-calendar-day"></i>
                                    @appointment.AppointmentDate.ToString("dd MMMM yyyy, dddd")
                                </div>
                                <div class="appointment-time">
                                    <i class="fa-solid fa-clock"></i>
                                    @appointment.AppointmentTime
                                </div>
                                @if (!string.IsNullOrEmpty(appointment.Reason))
                                {
                                    <div style="margin-top: 8px; color: #666;">
                                        <strong>Şikayet:</strong> @appointment.Reason
                                    </div>
                                }
                                <span class="appointment-status @(appointment.Status == "Pending" ? "status-pending" : "status-approved")">
                                    @(appointment.Status == "Pending" ? "⏳ Onay Bekliyor" : "✓ Onaylandı")
                                </span>
                            </div>
                        }
                        else
                        {
                            <div class="no-appointment">
                                <i class="fa-solid fa-calendar-xmark"></i>
                                <p>Yaklaşan randevu bulunmuyor</p>
                            </div>
                        }
                    </div>

                    <div class="patient-actions">
                        <a href="/Doctor/Messages?patientId=@patient.Id" class="btn-action btn-message">
                            <i class="fa-solid fa-message"></i> Mesaj Gönder
                        </a>
                        <a href="/Doctor/PatientTests?patientId=@patient.Id" class="btn-action btn-tests">
                            <i class="fa-solid fa-flask"></i> Tahlilleri Gör
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>
