@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.BodyClass = "doctor-bg";
}

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .page-header {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 40px;
        text-align: center;
        margin-bottom: 40px;
        box-shadow: 0px 4px 20px rgba(0,0,0,0.08);
    }

    .title {
        color: #0f837d;
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 0;
        text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.5);
    }

    .menu-grid {
        display: flex;
        justify-content: center;
        gap: 45px;
        flex-wrap: nowrap;
    }

    .menu-item {
        background: white;
        width: 180px;
        height: 180px;
        border-radius: 20px;
        box-shadow: 0px 8px 25px rgba(0,0,0,0.10);

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;

        text-align: center;
        font-size: 20px;
        font-weight: 600;
        color: #0f837d;

        text-decoration: none;
        transition: 0.2s ease;
    }

    .menu-item i {
        font-size: 45px;
        margin-bottom: 12px;
        color: #0f837d;
    }

    .menu-item:hover {
        background-color: #0f837d;
        color: white;
        transform: translateY(-5px);
        box-shadow: 0px 12px 30px rgba(0,0,0,0.20);
    }

    .menu-item:hover i {
        color: white;
    }
</style>

<div class="container">
    <div class="page-header">
        <div class="title">Doktor Paneli</div>
    </div>

    <div class="menu-grid">
        <a class="menu-item" href="/Doctor/Profile">
            <i class="fa-solid fa-user-doctor"></i>
            Profilim
        </a>

        <a class="menu-item" href="/Doctor/Patients">
            <i class="fa-solid fa-users"></i>
            HastalarÄ±m
        </a>

        <a class="menu-item" href="/Doctor/Appointments">
            <i class="fa-solid fa-calendar-check"></i>
            Randevular
        </a>

        <a class="menu-item" href="/Doctor/Messages">
            <i class="fa-solid fa-comments"></i>
            Mesajlar
        </a>

        <a class="menu-item" href="/Doctor/Analytics">
            <i class="fa-solid fa-chart-line"></i>
            Analizler
        </a>
    </div>
</div>
