@model List<DateTime>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.BodyClass = "doctor-bg";
    var patient = ViewBag.Patient as smartclinic_web.Models.User;
}

<style>
    .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .page-header {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 40px;
        text-align: center;
        margin-bottom: 40px;
        position: relative;
        box-shadow: 0px 4px 20px rgba(0,0,0,0.08);
    }

    .back-button {
        position: absolute;
        left: 30px;
        top: 50%;
        transform: translateY(-50%);
        background: white;
        border: none;
        width: 45px;
        height: 45px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0px 2px 10px rgba(0,0,0,0.1);
        text-decoration: none;
        color: #0f837d;
        font-size: 20px;
    }

    .back-button:hover {
        background: #0f837d;
        color: white;
        transform: translateY(-50%) scale(1.1);
        box-shadow: 0px 4px 15px rgba(15, 131, 125, 0.3);
    }

    .page-title {
        color: #0f837d;
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 10px;
        text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.5);
    }

    .patient-name {
        color: #666;
        font-size: 18px;
        margin-top: 10px;
    }

    .tests-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 30px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 3px 12px rgba(0,0,0,0.1);
    }

    .test-date-item {
        background: #6c5ce7;
        color: white;
        padding: 12px 18px;
        border-radius: 10px;
        margin: 10px 0;
        display: block;
        font-size: 18px;
        font-weight: 500;
        text-decoration: none;
        transition: 0.25s ease;
    }

    .test-date-item:hover {
        background: #5f4dd1;
        transform: translateY(-3px);
        color: white;
        box-shadow: 0 4px 15px rgba(108, 92, 231, 0.3);
    }

    .info-section {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 25px;
    }

    .info-section h4 {
        color: #0f837d;
        margin-bottom: 15px;
        font-size: 20px;
    }

    .patient-info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
        text-align: left;
    }

    .info-item {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
    }

    .info-item i {
        color: #6c5ce7;
        width: 20px;
    }

    .info-item strong {
        color: #333;
    }
</style>

<div class="container">
    <div class="page-header">
        <a href="/Doctor/Patients" class="back-button">
            <i class="fa-solid fa-arrow-left"></i>
        </a>
        <h2 class="page-title">Hasta Tahlilleri</h2>
        @if (patient != null)
        {
            <p class="patient-name">@patient.Name @patient.Surname</p>
        }
    </div>

    <div class="tests-container">
        @if (patient != null)
        {
            <div class="info-section">
                <h4><i class="fa-solid fa-user-circle"></i> Hasta Bilgileri</h4>
                <div class="patient-info-grid">
                    <div class="info-item">
                        <i class="fa-solid fa-envelope"></i>
                        <span><strong>Email:</strong> @patient.Email</span>
                    </div>
                    <div class="info-item">
                        <i class="fa-solid fa-cake-candles"></i>
                        <span><strong>Yaş:</strong> @(patient.Age?.ToString() ?? "Belirtilmemiş")</span>
                    </div>
                    <div class="info-item">
                        <i class="fa-solid fa-venus-mars"></i>
                        <span><strong>Cinsiyet:</strong> @(patient.Gender ?? "Belirtilmemiş")</span>
                    </div>
                    <div class="info-item">
                        <i class="fa-solid fa-droplet"></i>
                        <span><strong>Kan Grubu:</strong> @(patient.BloodGroup ?? "Belirtilmemiş")</span>
                    </div>
                </div>
            </div>
        }

        <h4 style="margin-top:20px; color:#444;">Tahlil Tarihleri</h4>

        <div style="margin-top:15px;">
            @if (Model != null && Model.Any())
            {
                foreach (var date in Model)
                {
                    string formatted = date.ToString("dd.MM.yyyy");

                    <a href="/Doctor/PatientTestDetails?patientId=@patient.Id&date=@formatted" class="test-date-item">
                        <i class="fa-solid fa-flask"></i> @formatted
                    </a>
                }
            }
            else
            {
                <p style="margin-top:15px; color:#666;">Bu hastanın henüz yüklenmiş tahlili bulunmuyor.</p>
            }
        </div>
    </div>
</div>
