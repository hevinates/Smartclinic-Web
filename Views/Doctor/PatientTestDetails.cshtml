@model List<smartclinic_web.Models.TestResult>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.BodyClass = "doctor-bg";
    var testDate = ViewBag.TestDate as DateTime?;
    var patient = ViewBag.Patient as smartclinic_web.Models.User;
}

<style>
    .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .page-header {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 40px;
        text-align: center;
        margin-bottom: 40px;
        position: relative;
        box-shadow: 0px 4px 20px rgba(0,0,0,0.08);
    }

    .back-button {
        position: absolute;
        left: 30px;
        top: 50%;
        transform: translateY(-50%);
        background: white;
        border: none;
        width: 45px;
        height: 45px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0px 2px 10px rgba(0,0,0,0.1);
        text-decoration: none;
        color: #0f837d;
        font-size: 20px;
    }

    .back-button:hover {
        background: #0f837d;
        color: white;
        transform: translateY(-50%) scale(1.1);
        box-shadow: 0px 4px 15px rgba(15, 131, 125, 0.3);
    }

    .page-title {
        color: #0f837d;
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 10px;
        text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.5);
    }

    .test-date-badge {
        display: inline-block;
        background: #6c5ce7;
        color: white;
        padding: 8px 20px;
        border-radius: 20px;
        font-size: 16px;
        font-weight: 600;
        margin-top: 10px;
    }

    .patient-name {
        color: #666;
        font-size: 18px;
        margin-top: 5px;
    }

    .results-container {
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 3px 12px rgba(0,0,0,0.1);
    }

    .results-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid #f0f0f0;
    }

    .results-header h3 {
        color: #0f837d;
        margin: 0;
        font-size: 24px;
    }

    .results-stats {
        display: flex;
        gap: 20px;
    }

    .stat-badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
    }

    .stat-normal {
        background: #d4edda;
        color: #155724;
    }

    .stat-abnormal {
        background: #f8d7da;
        color: #721c24;
    }

    .test-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    .test-table th {
        background: #f8f9fa;
        color: #333;
        padding: 15px;
        text-align: left;
        font-weight: 600;
        border-bottom: 2px solid #dee2e6;
    }

    .test-table td {
        padding: 15px;
        border-bottom: 1px solid #f0f0f0;
    }

    .test-table tr:hover {
        background: #f8f9fa;
    }

    .test-name {
        font-weight: 600;
        color: #333;
    }

    .test-value {
        font-size: 18px;
        font-weight: 700;
        color: #0f837d;
    }

    .test-range {
        color: #666;
        font-size: 14px;
    }

    .status-badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
    }

    .status-normal {
        background: #d4edda;
        color: #155724;
    }

    .status-abnormal {
        background: #f8d7da;
        color: #721c24;
    }

    .alert-info {
        background: #d1ecf1;
        border: 1px solid #bee5eb;
        color: #0c5460;
        padding: 15px;
        border-radius: 10px;
        margin-top: 20px;
    }

    .alert-info i {
        margin-right: 8px;
    }
</style>

<div class="container">
    <div class="page-header">
        <a href="/Doctor/PatientTests?patientId=@patient.Id" class="back-button">
            <i class="fa-solid fa-arrow-left"></i>
        </a>
        <h2 class="page-title">Tahlil Detayları</h2>
        @if (patient != null)
        {
            <p class="patient-name"><i class="fa-solid fa-user"></i> @patient.Name @patient.Surname</p>
        }
        @if (testDate.HasValue)
        {
            <span class="test-date-badge">
                <i class="fa-solid fa-calendar"></i> @testDate.Value.ToString("dd MMMM yyyy")
            </span>
        }
    </div>

    <div class="results-container">
        @if (Model != null && Model.Any())
        {
            var normalCount = Model.Count(t => !t.IsOutOfRange);
            var abnormalCount = Model.Count(t => t.IsOutOfRange);

            <div class="results-header">
                <h3><i class="fa-solid fa-flask-vial"></i> Test Sonuçları</h3>
                <div class="results-stats">
                    <span class="stat-badge stat-normal">
                        <i class="fa-solid fa-check-circle"></i> Normal: @normalCount
                    </span>
                    <span class="stat-badge stat-abnormal">
                        <i class="fa-solid fa-exclamation-triangle"></i> Anormal: @abnormalCount
                    </span>
                </div>
            </div>

            <table class="test-table">
                <thead>
                    <tr>
                        <th>Test Adı</th>
                        <th>Sonuç</th>
                        <th>Referans Aralığı</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var test in Model)
                    {
                        <tr>
                            <td class="test-name">@test.TestName</td>
                            <td class="test-value">@test.Value</td>
                            <td class="test-range">@test.ReferenceRange</td>
                            <td>
                                @if (test.IsOutOfRange)
                                {
                                    <span class="status-badge status-abnormal">
                                        <i class="fa-solid fa-exclamation-circle"></i> Anormal
                                    </span>
                                }
                                else
                                {
                                    <span class="status-badge status-normal">
                                        <i class="fa-solid fa-check-circle"></i> Normal
                                    </span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (abnormalCount > 0)
            {
                <div class="alert-info">
                    <i class="fa-solid fa-info-circle"></i>
                    <strong>Bilgi:</strong> Bu hastanın @abnormalCount adet test sonucu referans aralığının dışındadır. 
                    Detaylı değerlendirme için hastanızla görüşmeniz önerilir.
                </div>
            }
        }
        else
        {
            <p style="text-align: center; color: #666; padding: 40px;">
                <i class="fa-solid fa-flask" style="font-size: 48px; color: #ddd; margin-bottom: 15px;"></i><br>
                Bu tarihte tahlil sonucu bulunamadı.
            </p>
        }
    </div>
</div>
