@{
    ViewData["Title"] = "Analizler";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.BodyClass = "doctor-bg";
}

<style>
    .analytics-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .page-header {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 40px;
        text-align: center;
        margin-bottom: 40px;
        position: relative;
        box-shadow: 0px 4px 20px rgba(0,0,0,0.08);
    }

    .back-button {
        position: absolute;
        left: 30px;
        top: 50%;
        transform: translateY(-50%);
        background: white;
        border: none;
        width: 45px;
        height: 45px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0px 2px 10px rgba(0,0,0,0.1);
        text-decoration: none;
        color: #0f837d;
        font-size: 20px;
    }

    .back-button:hover {
        background: #0f837d;
        color: white;
        transform: translateY(-50%) scale(1.1);
        box-shadow: 0px 4px 15px rgba(15, 131, 125, 0.3);
    }

    .page-title {
        color: #0f837d;
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 10px;
        text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.5);
    }

    .page-subtitle {
        color: #2c5f5d;
        font-size: 16px;
        margin-bottom: 0;
        font-weight: 500;
    }

    .analytics-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0px 4px 15px rgba(0,0,0,0.08);
        margin-bottom: 30px;
        overflow: hidden;
    }

    .analytics-card .card-header {
        background: linear-gradient(135deg, #0f837d 0%, #0a5f5b 100%);
        color: white;
        padding: 20px 25px;
        font-size: 20px;
        font-weight: 600;
    }

    .analytics-card .card-body {
        padding: 25px;
    }

    .stat-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0px 4px 15px rgba(0,0,0,0.08);
        padding: 25px;
        height: 100%;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 8px 25px rgba(0,0,0,0.15);
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
    }

    .stat-value {
        font-size: 32px;
        font-weight: 700;
        color: #0f837d;
        margin: 0;
    }

    .stat-label {
        color: #6c757d;
        font-size: 14px;
        margin-bottom: 8px;
    }

    .table-container {
        background: white;
        border-radius: 15px;
        box-shadow: 0px 4px 15px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .table-container .table {
        margin-bottom: 0;
    }

    .table thead {
        background-color: #f8f9fa;
    }

    .badge {
        padding: 6px 12px;
        font-size: 12px;
        font-weight: 500;
    }
</style>

<div class="analytics-container">
    <div class="page-header">
        <a href="/Doctor/Dashboard" class="back-button">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h2 class="page-title">Analizler</h2>
       
    </div>

    <!-- Ã–zet Kartlar -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-primary bg-opacity-10">
                        <i class="fas fa-users text-primary"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <p class="stat-label mb-1">Toplam Hasta</p>
                        <h3 class="stat-value">@ViewBag.TotalPatients</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-success bg-opacity-10">
                        <i class="fas fa-calendar-check text-success"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <p class="stat-label mb-1">Toplam Randevu</p>
                        <h3 class="stat-value">@ViewBag.TotalAppointments</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-warning bg-opacity-10">
                        <i class="fas fa-clock text-warning"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <p class="stat-label mb-1">Bekleyen</p>
                        <h3 class="stat-value">@ViewBag.PendingAppointments</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-info bg-opacity-10">
                        <i class="fas fa-check-circle text-info"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <p class="stat-label mb-1">Onaylanan</p>
                        <h3 class="stat-value">@ViewBag.ApprovedAppointments</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Randevu Durumu GrafiÄŸi -->
        <div class="col-md-6 mb-4">
            <div class="analytics-card">
                <div class="card-header">
                    ðŸ“ˆ Randevu Durumu
                </div>
                <div class="card-body">
                    <canvas id="appointmentStatusChart" style="max-height: 300px;"></canvas>
                </div>
            </div>
        </div>

        <!-- Cinsiyet DaÄŸÄ±lÄ±mÄ± -->
        <div class="col-md-6 mb-4">
            <div class="analytics-card">
                <div class="card-header">
                    ðŸ‘¥ Hasta Cinsiyet DaÄŸÄ±lÄ±mÄ±
                </div>
                <div class="card-body">
                    <canvas id="genderChart" style="max-height: 300px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <!-- YaÅŸ GruplarÄ± -->
        <div class="col-md-6 mb-4">
            <div class="analytics-card">
                <div class="card-header">
                    ðŸ“Š YaÅŸ GruplarÄ±
                </div>
                <div class="card-body">
                    <canvas id="ageGroupChart" style="max-height: 300px;"></canvas>
                </div>
            </div>
        </div>

        <!-- AylÄ±k Randevu KarÅŸÄ±laÅŸtÄ±rmasÄ± -->
        <div class="col-md-6 mb-4">
            <div class="analytics-card">
                <div class="card-header">
                    ðŸ“… AylÄ±k Randevu KarÅŸÄ±laÅŸtÄ±rmasÄ±
                </div>
                <div class="card-body">
                    <canvas id="monthlyComparisonChart" style="max-height: 300px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- BugÃ¼nkÃ¼ Randevular -->
    @if (ViewBag.TodayAppointments != null && ViewBag.TodayAppointments.Count > 0)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="analytics-card">
                    <div class="card-header">
                        ðŸ“… BugÃ¼nkÃ¼ Randevular
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th class="px-4 py-3">Saat</th>
                                        <th class="py-3">Hasta</th>
                                        <th class="py-3">Durum</th>
                                        <th class="py-3">Not</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var app in ViewBag.TodayAppointments)
                                    {
                                        <tr>
                                            <td class="px-4 py-3"><strong>@app.AppointmentTime</strong></td>
                                            <td class="py-3">@app.Patient.Name @app.Patient.Surname</td>
                                            <td class="py-3">
                                                @if (app.Status == "Pending")
                                                {
                                                    <span class="badge bg-warning">Bekliyor</span>
                                                }
                                                else if (app.Status == "Approved")
                                                {
                                                    <span class="badge bg-success">OnaylandÄ±</span>
                                                }
                                            </td>
                                            <td class="py-3">@(string.IsNullOrEmpty(app.PatientNote) ? "-" : app.PatientNote)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- YaklaÅŸan Randevular -->
    @if (ViewBag.UpcomingAppointments != null && ViewBag.UpcomingAppointments.Count > 0)
    {
        <div class="row">
            <div class="col-12">
                <div class="analytics-card">
                    <div class="card-header">
                        ðŸ”œ YaklaÅŸan Randevular (7 GÃ¼n)
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th class="px-4 py-3">Tarih</th>
                                        <th class="py-3">Saat</th>
                                        <th class="py-3">Hasta</th>
                                        <th class="py-3">Durum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var app in ViewBag.UpcomingAppointments)
                                    {
                                        <tr>
                                            <td class="px-4 py-3">@app.AppointmentDate.ToString("dd MMMM yyyy")</td>
                                            <td class="py-3"><strong>@app.AppointmentTime</strong></td>
                                            <td class="py-3">@app.Patient.Name @app.Patient.Surname</td>
                                            <td class="py-3">
                                                @if (app.Status == "Pending")
                                                {
                                                    <span class="badge bg-warning">Bekliyor</span>
                                                }
                                                else if (app.Status == "Approved")
                                                {
                                                    <span class="badge bg-success">OnaylandÄ±</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Randevu Durumu GrafiÄŸi
        const appointmentStatusCtx = document.getElementById('appointmentStatusChart').getContext('2d');
        new Chart(appointmentStatusCtx, {
            type: 'doughnut',
            data: {
                labels: ['Bekleyen', 'Onaylanan', 'Tamamlanan', 'Reddedilen'],
                datasets: [{
                    data: [@ViewBag.PendingAppointments, @ViewBag.ApprovedAppointments, @ViewBag.CompletedAppointments, @ViewBag.RejectedAppointments],
                    backgroundColor: ['#ffc107', '#17a2b8', '#28a745', '#dc3545']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Cinsiyet DaÄŸÄ±lÄ±mÄ±
        const genderCtx = document.getElementById('genderChart').getContext('2d');
        new Chart(genderCtx, {
            type: 'pie',
            data: {
                labels: ['Erkek', 'KadÄ±n'],
                datasets: [{
                    data: [@ViewBag.MalePatients, @ViewBag.FemalePatients],
                    backgroundColor: ['#007bff', '#e83e8c']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // YaÅŸ GruplarÄ±
        const ageGroupCtx = document.getElementById('ageGroupChart').getContext('2d');
        new Chart(ageGroupCtx, {
            type: 'bar',
            data: {
                labels: ['0-18', '18-35', '35-50', '50+'],
                datasets: [{
                    label: 'Hasta SayÄ±sÄ±',
                    data: [@ViewBag.Age0_18, @ViewBag.Age18_35, @ViewBag.Age35_50, @ViewBag.Age50Plus],
                    backgroundColor: '#28a745'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // AylÄ±k KarÅŸÄ±laÅŸtÄ±rma
        const monthlyCtx = document.getElementById('monthlyComparisonChart').getContext('2d');
        new Chart(monthlyCtx, {
            type: 'bar',
            data: {
                labels: ['GeÃ§en Ay', 'Bu Ay'],
                datasets: [{
                    label: 'Randevu SayÄ±sÄ±',
                    data: [@ViewBag.LastMonthAppointments, @ViewBag.ThisMonthAppointments],
                    backgroundColor: ['#6c757d', '#007bff']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    </script>
}
