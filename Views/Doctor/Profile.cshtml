@model smartclinic_web.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.BodyClass = "doctor-bg";
}

<style>
    .profile-card {
        max-width: 550px;
        margin: 40px auto;
        background: white;
        padding: 35px;
        border-radius: 18px;
        box-shadow: 0px 8px 25px rgba(0,0,0,0.15);
    }
    .title {
        font-size: 30px;
        color: #0f837d;
        font-weight: 700;
        text-align: center;
        margin-bottom: 25px;
    }
    .input-box {
        width: 100%;
        padding: 12px;
        margin-top: 12px;
        border: 1px solid #ccc;
        border-radius: 10px;
        font-size: 16px;
    }
    .save-btn {
        width: 100%;
        margin-top: 25px;
        background: #0f837d;
        color: white;
        padding: 12px;
        border: none;
        border-radius: 10px;
        font-size: 18px;
        cursor: pointer;
    }
    .save-btn:hover {
        background: #0c6a63;
    }
    .success-message {
        background-color: #e8f9f1;
        color: #0f837d;
        padding: 12px;
        border-radius: 10px;
        margin-bottom: 15px;
        font-weight: 600;
        text-align: center;
        border: 1px solid #0f837d;
    }
</style>


<div class="profile-card">

    <div class="title">Profilim</div>

    @if (TempData["Success"] != null)
    {
        <div class="success-message">@TempData["Success"]</div>
    }

    <form method="post" action="/Doctor/Profile">

        <input type="hidden" name="Id" value="@Model.Id" />

        <input type="text"
               name="Name"
               class="input-box"
               placeholder="İsim"
               value="@Model.Name"
               required />

        <input type="text"
               name="Surname"
               class="input-box"
               placeholder="Soyisim"
               value="@Model.Surname"
               required />

        <input type="text"
               name="DoctorHospital"
               class="input-box"
               placeholder="Çalıştığım Hastane"
               value="@Model.DoctorHospital" />

        <button class="save-btn" type="submit">Kaydet</button>

    </form>

</div>
